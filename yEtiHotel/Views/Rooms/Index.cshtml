@model IEnumerable<yEtiHotel.Models.Room>

@{
    ViewBag.Title = "Nasze pokoje";
}

<h2>Nasze pokoje</h2>

@if (User.IsInRole(yEtiHotel.Models.ApplicationUser.ROLE_ADMIN))
{
    <p>
        @Html.ActionLink("Utwórz", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bedrooms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Area)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exposure)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bedrooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Area)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Exposure)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })
            @if (User.IsInRole(yEtiHotel.Models.ApplicationUser.ROLE_ADMIN))
            {
                @Html.Raw("| ");
                @Html.ActionLink("Edycja", "Edit", new { id = item.Id });
                @Html.Raw(" | ");
                @Html.ActionLink("Skasuj", "Delete", new { id = item.Id });
            }
        </td>
    </tr>
}

</table>
